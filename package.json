{
  "name": "react-native-big-calendar",
  "version": "0.8.0",
  "main": "build/index.js",
  "jsnext:main": "build/index.es.js",
  "module": "build/index.es.js",
  "types": "build/index.d.ts",
  "repository": "git@github.com:llotheo/react-native-big-calendar",
  "author": "gosho-kazuya <ketsume0211@gmail.com>",
  "license": "MIT",
  "scripts": {
    "storybook": "start-storybook -p 7007",
    "build-storybook": "build-storybook -o .storybook-build",
    "sync-ios": "yarn build && cp -r build rndemo",
    "start-ios": "yarn sync-ios && cd rndemo && yarn ios",
    "test": "jest",
    "format": "prettier --write {src,stories}/*.{ts,tsx}",
    "lint": "tslint src/*.{ts,tsx}",
    "lint:fix": "yarn lint --fix",
    "watch": "rollup -cw",
    "prepublish": "npm run build",
    "build": "npm-run-all build:clean build:ts",
    "build:clean": "rimraf build/",
    "build:ts": "env NODE_ENV=production rollup -c",
    "prepare": "husky install"
  },
  "dependencies": {
    "dayjs": "^1.10.4"
  },
  "peerDependencies": {
    "react": "^16.8.3",
    "react-native": "^0.59.0"
  },
  "devDependencies": {
    "@babel/core": "^7.13.8",
    "@rollup/plugin-typescript": "^8.2.0",
    "@storybook/react": "^6.1.21",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.35",
    "@types/react-native": "^0.63.51",
    "acorn-jsx": "^5.3.1",
    "babel-loader": "^8.2.2",
    "husky": "^5.1.3",
    "jest": "^25.5.4",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-native": "^0.63.4",
    "react-native-web": "^0.15.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.40.0",
    "rollup-plugin-typescript2": "^0.29.0",
    "ts-jest": "^25.5.1",
    "ts-loader": "^8.0.10",
    "tslib": "^2.1.0",
    "tslint": "^6.1.3",
    "typescript": "^3.9.7",
    "webpack-merge": "^5.7.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,md}": [
      "prettier --write",
      "tslint --fix"
    ]
  }
}
