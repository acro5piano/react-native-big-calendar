{
  "name": "react-native-big-calendar",
  "version": "0.4.0",
  "main": "build/index.js",
  "jsnext:main": "build/index.es.js",
  "module": "build/index.es.js",
  "types": "build/index.d.ts",
  "repository": "git@github.com:llotheo/react-native-big-calendar",
  "author": "gosho-kazuya <ketsume0211@gmail.com>",
  "license": "MIT",
  "scripts": {
    "storybook": "start-storybook -p 7007",
    "build-storybook": "build-storybook -o .storybook-build",
    "sync-ios": "yarn build && cp -r build rndemo",
    "start-ios": "yarn sync-ios && cd rndemo && yarn ios",
    "test": "jest",
    "lint": "tslint src/*.{ts,tsx}",
    "lint:fix": "yarn lint --fix",
    "watch": "rollup -cw",
    "prepublish": "npm run build",
    "build": "npm-run-all build:clean build:ts",
    "build:clean": "rm -rf build/",
    "build:ts": "env NODE_ENV=production rollup -c"
  },
  "dependencies": {
    "dayjs": "^1.8.26"
  },
  "peerDependencies": {
    "react": "^16.8.3",
    "react-native": "^0.59.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@rollup/plugin-typescript": "^4.1.1",
    "@storybook/react": "^5.3.18",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.5",
    "@types/react-native": "^0.62.4",
    "acorn-jsx": "^5.2.0",
    "babel-loader": "^8.1.0",
    "husky": "^4.2.5",
    "jest": "^25.2.6",
    "lint-staged": "^10.2.2",
    "np": "^6.2.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "react-native": "^0.62.2",
    "react-native-web": "^0.12.2",
    "rollup": "^1.32.1",
    "rollup-plugin-typescript2": "^0.27.0",
    "ts-jest": "^25.4.0",
    "ts-loader": "^6.2.2",
    "tslib": "^1.11.1",
    "tslint": "^6.1.2",
    "typescript": "^3.8.3",
    "webpack-merge": "^4.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,md}": [
      "prettier --write",
      "tslint --fix"
    ]
  }
}
